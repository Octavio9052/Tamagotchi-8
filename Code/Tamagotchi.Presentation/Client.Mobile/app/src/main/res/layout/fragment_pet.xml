<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:layout_alignParentStart="true"
        android:id="@+id/pet_health_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:rcProgress="50"
        app:rcMax="100"
        app:rcRadius="5dp"
        app:rcBackgroundPadding="2dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/colorPrimaryDark"
        app:rcSecondaryProgressColor="@color/colorAccent"
        app:rcBackgroundColor="@color/colorBlack"
        app:rcIconSrc="@drawable/ic_pets_black_24dp"
        app:rcIconSize="23dp"
        app:rcIconWidth="25dp"
        app:rcIconHeight="25dp"
        app:rcIconPadding="1dp"
        app:rcIconPaddingLeft="1dp"
        app:rcIconPaddingRight="1dp"
        app:rcIconPaddingTop="1dp"
        app:rcIconPaddingBottom="1dp"
        app:rcIconBackgroundColor="@color/colorWhite" />

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/pet_rest_bar"
        android:layout_below="@id/pet_health_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:rcProgress="50"
        app:rcMax="100"
        app:rcRadius="5dp"
        app:rcBackgroundPadding="2dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/colorPrimaryDark"
        app:rcSecondaryProgressColor="@color/colorAccent"
        app:rcBackgroundColor="@color/colorBlack"
        app:rcIconSrc="@drawable/ic_pets_black_24dp"
        app:rcIconSize="23dp"
        app:rcIconWidth="25dp"
        app:rcIconHeight="25dp"
        app:rcIconPadding="1dp"
        app:rcIconPaddingLeft="1dp"
        app:rcIconPaddingRight="1dp"
        app:rcIconPaddingTop="1dp"
        app:rcIconPaddingBottom="1dp"
        app:rcIconBackgroundColor="@color/colorWhite" />

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/pet_fun_bar"
        android:layout_below="@id/pet_rest_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:rcProgress="50"
        app:rcMax="100"
        app:rcRadius="5dp"
        app:rcBackgroundPadding="2dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/colorPrimaryDark"
        app:rcSecondaryProgressColor="@color/colorAccent"
        app:rcBackgroundColor="@color/colorBlack"
        app:rcIconSrc="@drawable/ic_pets_black_24dp"
        app:rcIconSize="23dp"
        app:rcIconWidth="25dp"
        app:rcIconHeight="25dp"
        app:rcIconPadding="1dp"
        app:rcIconPaddingLeft="1dp"
        app:rcIconPaddingRight="1dp"
        app:rcIconPaddingTop="1dp"
        app:rcIconPaddingBottom="1dp"
        app:rcIconBackgroundColor="@color/colorWhite" />

    <ImageView
        android:layout_margin="10dp"
        android:layout_below="@id/pet_fun_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/img_descriptor"
        android:src="@drawable/app_logo"
        android:id="@+id/state_image_pet"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/state_image_pet"
        android:layout_above="@id/action_buttons_pet">

       <android.support.v7.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has slept" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has slept" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has slept" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has slept" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has eaten" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="Morris has slept" />
       </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>

    <LinearLayout
        android:id="@+id/action_buttons_pet"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        <Button
            android:id="@+id/pet_action_eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eat" />
        <Button
            android:id="@+id/pet_action_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play" />
        <Button
            android:id="@+id/pet_action_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sleep" />
    </LinearLayout>

</RelativeLayout>